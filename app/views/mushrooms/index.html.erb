<p id="notice"><%= notice %></p>

<h1>Mushrooms</h1>

<table>
  <thead>
    <tr>
      <th>Latin name</th>
      <th>Common name</th>
      <th>Confused with</th>
      <th>Habitat</th>
      <th>Region</th>
      <th>Fairy rings</th>
      <th>Characteristics</th>
      <th>Img url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mushrooms.each do |mushroom| %>
      <tr>
        <td><%= mushroom.latin_name %></td>
        <td><%= mushroom.common_name %></td>
        <td><%= mushroom.confused_with %></td>
        <td><%= mushroom.habitat %></td>
        <td><%= mushroom.region %></td>
        <td><%= mushroom.poisonous %></td>
        <td><%= mushroom.img_url %></td>
        <td><%= link_to 'Show', mushroom %></td>
        <td><%= link_to 'Edit', edit_mushroom_path(mushroom) %></td>
        <td><%= link_to 'Destroy', mushroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

